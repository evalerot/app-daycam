<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.PapeleriaPaRFiles">


    <uses-feature
        android:name="android.hardware.camera"
        android:exported="true"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission
        android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/header"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DaysCool">
        <activity
            android:name=".Presentacion.Sesion"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Presentacion.AjustesPrivados"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Presentacion.AjustesPublicos"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Presentacion.Menu"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Presentacion.Cliente"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Presentacion.Inventarios"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Presentacion.FacturarPapeleriaPaR"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Presentacion.Compras"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Presentacion.FacturarRestaurante"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Presentacion.BusquedaRapida"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Presentacion.Reporte"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.Escanear"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Controller.SplashScreens"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:node="merge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>
</manifest>