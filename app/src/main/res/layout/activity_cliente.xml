<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Presentacion.Cliente">

    <Spinner
        android:id="@+id/seleccionCliente"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:spinnerMode="dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:text="ID"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/idCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:text="LINEA"
            android:textSize="20sp"
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nombreCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:hint="Nombre"
            android:inputType="text"
            android:text=""
            android:textSize="15sp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/nitCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:hint="Nit"
            android:inputType="text"
            android:text=""
            android:textSize="15sp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/direccionCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:hint="Direccion"
            android:inputType="text"
            android:text=""
            android:textSize="15sp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/celularCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:hint="Celular"
            android:inputType="text"
            android:text=""
            android:textSize="15sp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/correoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:hint="Ciudad"
            android:inputType="text"
            android:text=""
            android:textSize="15sp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/telefonoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:hint="Telefono"
            android:inputType="text"
            android:text=""
            android:textSize="15sp"
            android:autofillHints="" />

        <Spinner
            android:id="@+id/estadoCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnAÃ±adir"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:contentDescription="boton"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/insertar" />

        <ImageButton
            android:id="@+id/btnModificar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/modificar"
            android:contentDescription="boton" />

        <ImageButton
            android:id="@+id/btnEliminar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="boton"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/borrar" />

    </LinearLayout>
</LinearLayout>